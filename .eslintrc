rules:
  eqeqeq: 2
  no-use-before-define: [2, nofunc]
  consistent-return: 2
  no-else-return: 2
  no-loop-func: 2
  no-lonely-if: 2

  strict: [2, global]
  indent: [2, 4]
  quotes: [2, single]
  semi: 2
  semi-spacing: 2
  no-multi-spaces: 2
  no-mixed-spaces-and-tabs: 2
  key-spacing: 2
  brace-style: 2
  comma-spacing: 2
  comma-style: 2
  space-after-keywords: 2
  space-before-function-paren: [2, {anonymous: always, named: never}]
  space-before-blocks: 2
  space-in-parens: 2
  space-infix-ops: 2
  space-unary-ops: 2

env:
  node: true

extends: 'eslint:recommended'
